{{>layouts/header}}

<h1> 글 수정 </h1>

<form class="container" action="/articles/update" method="post">
    <input type="hidden" name="id" value="{{articleResult.id}}">
    <div class="mb-3">
        <label for="title" class="form-label">제목 : 아이디 - {{articleResult.id}}</label>
        <input type="text" class="form-control" value={{ articleResult.title }} id="title" name="title">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">내용</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="content">{{ articleResult.content }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="/articles/{{ articleResult.id}}/delete"> 삭제 </a> |
<a href="/articles"> 목록 </a>
{{>layouts/footer}}